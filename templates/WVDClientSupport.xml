<RootXML>
    <Standard
        WVDClientVer="{{ data[ver]['version'][:-2]}}"
        {% if data[ver]['platform'] == 'x64' %}
            Installer_64="{{ data[ver]['url'] }}"
        {% endif %}
        {% if data[ver]['platform'] == 'x86' %}
            Installer_32="{{ data[ver]['url'] }}"
        {% endif %}
        {% if data[ver]['platform'] == 'ARM64' %}
            Installer_ARM64="{{ data[ver]['url'] }}"
        {% endif %}
        />
    <Advanced>
        <RASClient
            Build="0"
            WVDClientVer="{{ data[ver]['version'][:-2]}}"
        {% if data[ver]['platform'] == 'x64' %}
            Installer_64="{{ data[ver]['url'] }}"
        {% endif %}
        {% if data[ver]['platform'] == 'x86' %}
            Installer_32="{{ data[ver]['url'] }}"
        {% endif %}
        {% if data[ver]['platform'] == 'ARM64' %}
            Installer_ARM64="{{ data[ver]['url'] }}"
        {% endif %}
        />
    </Advanced>
</RootXML>